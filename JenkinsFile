                             }
                             }
                             
   stage('Perform  Regression Testing'){
   steps{
      bat 'newman run C:\\Users\\elsab\\Desktop\NEWMAN\\YeabProject.postman_collection.json --disable-unicode'

                             }
                             }
        }
